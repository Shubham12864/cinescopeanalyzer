# Environment variables for CineScope Enhanced Movie Analyzer
# Copy this file to .env and add your actual API keys

# API Keys
OMDB_API_KEY=4977b044
FANART_API_KEY=fb2b79b4e05ed6d3452f751ddcf38bda
TMDB_API_KEY=your_tmdb_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Reddit API Configuration
# Get your API credentials at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=CineScopeAnalyzer/2.0 (Enhanced Movie Analysis Bot)

# Database Configuration
DATABASE_URL=sqlite:///./movie_analysis.db
REDIS_URL=redis://localhost:6379/0

# Scraping Configuration
SCRAPING_DELAY=2
MAX_CONCURRENT_REQUESTS=8
SCRAPY_ENV=development
USER_AGENT_ROTATION=true

# Analysis Configuration
ENABLE_DEEP_ANALYSIS=true
ENABLE_REDDIT_ANALYSIS=true
ENABLE_WEB_SCRAPING=true
MAX_REDDIT_POSTS_PER_SUBREDDIT=75
MAX_SCRAPED_REVIEWS_PER_SOURCE=50

# Performance Settings
ASYNC_CONCURRENCY_LIMIT=16
THREAD_POOL_SIZE=8
PROCESS_POOL_SIZE=4

# Caching
CACHE_ANALYSIS_RESULTS=true
CACHE_EXPIRY_HOURS=24
ENABLE_HTTP_CACHE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/enhanced_analysis.log
ENABLE_DETAILED_LOGGING=true

# Security
RATE_LIMITING_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
API_TIMEOUT_SECONDS=300

# External Services
ENABLE_PROXY_ROTATION=false
PROXY_LIST=
ENABLE_CAPTCHA_SOLVING=false

# Development Settings
DEBUG_MODE=true
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Instructions:
# 1. Copy this file and rename it to .env
# 2. Replace the placeholder values with your actual API keys
# 3. Get Reddit API credentials at: https://www.reddit.com/prefs/apps
# 4. Get TMDB API key at: https://www.themoviedb.org/settings/api
# 5. Keep the .env file secure and never commit it to version control
